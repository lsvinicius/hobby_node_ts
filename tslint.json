{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "no-console": false,
        "semicolon": [true, "always"],
        "typedef": [true, "call-signature", "arrow-call-signature", "parameter", "arrow-parameter",
            "property-declaration", "member-variable-declaration", "object-destructuring", 
            "array-destructuring"
        ],
        "max-classes-per-file": 10
    },
    "rulesDirectory": []
}